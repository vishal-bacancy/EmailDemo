
<div class="d-flex justify-content-start card text-center">
    <h3 class="position-absolute top-0 start-0 mx-2">Group</h3>
    <%= link_to "Add Group", new_group_path, class:"btn btn-outline-secondary position-absolute top-2 end-0 mx-2 mt-2"%><br>
    <div class="card-body">
    <hr>
        <table class="table ">
            <tr>
            <th scope="col"> Group Name </th>
            <th scope="col"> Memeber Count </th>
            <th colspan="3"> Action </th>
            </tr>

            <% @groups.each do |group| %>
            <tr>
            <td><%= link_to group.name, group %></td>
            <td><%= group.users.count%></td>
            <td><%=link_to(image_tag("delete.svg"), group_path(group),method: :delete) %></td>
            </tr>
            <% end %>
        </table>
    </div>
</div>
